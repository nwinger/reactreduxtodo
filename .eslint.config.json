{
  "parser": "babel-eslint", //Lints all valid Babel code
  "ecmaFeatures": {
    "jsx": true,  //Recognize JSX
    "modules": true,  //ES6 imports
    "classes": true,   //ES7 class properties
    "experimentalObjectRestSpread": true,
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "es6": true
  },
  "rules": {
    "strict": 0,
    "quotes": 0,
    "no-trailing-spaces": 0,
    "eol-last": 0,
    "no-unused-vars": 0,
    "no-underscore-dangle": 0,
    "no-alert": 0,
    "no-lone-blocks": 0,
    "babel/object-shorthand": 0
  },
  "globals": {  //Ignore global variables
    jQuery: true,
    $: true
  }
}
